﻿@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    bool isAuthenticated = MarketingSolutions.Helper.CommonHelper.IsUserAuthenticated(HttpContextAccessor.HttpContext);
    string userName = MarketingSolutions.Helper.CommonHelper.GetUsername(HttpContextAccessor.HttpContext);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MarketingManagerApp</title>

    <!-- DataTables CSS -->
    <link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet">

    <!-- Tabler CSS from CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@tabler/core@1.0.0-beta17/dist/css/tabler.min.css" />

    <!-- Font Awesome CSS from CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />


    <!-- Custom CSS (if any) -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="antialiased">
    <div class="page">
        <!-- Header with Horizontal Navbar -->
        <header class="navbar navbar-expand-md navbar-light d-print-none">
            <div class="container-xl">
                <!-- Brand Logo -->
                <a href="/Home/Index" class="navbar-brand navbar-brand-autodark d-none-navbar-horizontal pe-0 pe-md-3">
                    <img src="~/images/marketingSolutionLogo.png" width="140" height="70" alt="Tabler" class="navbar-brand-image">
                </a>

                <!-- Navbar Toggler for Mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-menu">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar Menu -->
                <div class="collapse navbar-collapse" id="navbar-menu">
                    <ul class="navbar-nav">
                        @* <li class="nav-item">
                        <a class="nav-link" href="/">
                        <span class="nav-link-icon d-md-none d-lg-inline-block">
                        <i class="fas fa-home"></i>
                        </span>
                        <span class="nav-link-title">Home</span>
                        </a>
                        </li> *@
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Dashboard">
                                <span class="nav-link-icon d-md-none d-lg-inline-block">
                                    @* <i class="fas fa-tachometer-alt"></i> *@
                                    <i class="fas fa-home"></i>
                                </span>
                                <span class="nav-link-title">Dashboard</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Companies/Index">
                                <span class="nav-link-icon d-md-none d-lg-inline-block">
                                    <i class="fas fa-tachometer-alt"></i>
                                </span>
                                <span class="nav-link-title">Companies & Products</span>
                            </a>
                        </li>
                        <!-- Add more menu items here -->
                    </ul>
                </div>

                <!-- User Dropdown -->
                @{
                    if (isAuthenticated)
                    {
                        <div class="navbar-nav flex-row order-md-last">
                            <div class="nav-item dropdown">
                                <a href="#" class="nav-link d-flex lh-1 text-reset p-0" data-bs-toggle="dropdown">
                                    <span class="avatar avatar-sm" style="background-image: url(https://tabler.io/static/avatars/000m.jpg)"></span>
                                    <div class="d-none d-xl-block ps-2">
                                        <div>@userName</div>
                                        <div class="mt-1 small text-muted">Marketing Manager</div>
                                    </div>
                                </a>
                                <div class="dropdown-menu dropdown-menu-end">
                                    @* <a class="dropdown-item" href="#">Profile</a>
                            <a class="dropdown-item" href="#">Settings</a>*@
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="/Account/Logout">Logout</a>
                                </div>
                            </div>
                        </div>
                    }
                }

            </div>
        </header>

        <!-- Content -->
        <div class="page-wrapper">
            <div class="container-xl">
                @RenderBody()
            </div>
        </div>

        <!-- Footer -->
        <footer class="footer footer-transparent d-print-none">
            <div class="container-xl">
                <div class="row text-center align-items-center">
                    <div class="col-12 col-lg-auto mt-3 mt-lg-0">
                        <ul class="list-inline list-inline-dots mb-0">
                            <li class="list-inline-item">© 2025 Marketing Solutions. All Rights Reserved!</li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <!-- jQuery from CDN -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

    <!-- Tabler JS from CDN -->
    <script src="https://cdn.jsdelivr.net/npm/@@tabler/core@1.0.0-beta17/dist/js/tabler.min.js"></script>

    <!-- SweetAlert (Alert Popups) -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


    <!-- Custom JS (if any) -->
    <script src="~/js/site.js"></script>
    <script src="~/js/AlertMessage/SweetAlert.js"></script>

    <!-- Render optional Scripts section -->
    @if (IsSectionDefined("Scripts"))
    {
        @RenderSection("Scripts", required: false)
    }
</body>
</html>